#include <iostream>
#include <cmath>
#include <iomanip>

using namespace std;

int main() {
    double a,b,z;
    cin>>a>>b>>z;

    const double PI = acos(-1);
    double square;
    double zAngleInRadians = PI*z/180;

    double epsilon = 0.000000001;

    if(z==0){
        square=0;
    }

    else if(z==90){
        square = a*b*sqrt(2);
    }

    else if(cos(zAngleInRadians)/sin(zAngleInRadians)>=a*sqrt(2)/b){
        square = a*a/(2*cos(zAngleInRadians));
    }

    else{
        square = b * sqrt(2) * (2 * a - b * cos(zAngleInRadians) * sqrt(2) / sin(zAngleInRadians)) /
                (2 * sin(zAngleInRadians));
    }

    cout << fixed << setprecision(4) <<abs(square);


    return 0;
}
